<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="repository.mapper.MyProfileMapper">
	<select id="selectMyContentCount" resultType ="int">
		select 
			count(*)
		from
			article
		where
			id = #{id}
	</select>
	
	<select id="selectMyFollowCount" resultType="int">
		select 
			count(*)
		from
			follow
		where 
			id = #{id}
	</select>
	
	<select id="selectMyFollowerCount" resultType="int">
		select 
			count(*)
		from
			follow
		where 
			followee = #{id}
	</select>
	
	<select id="selectAllMyArticle" resultType="ArticleVO">
		select
			*
		from
			article
		where 
			id = #{id}
		ORDER BY
			WRITE_TIME
		DESC
	</select>
	
</mapper>